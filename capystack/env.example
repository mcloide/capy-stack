# Core
APP_NAME=CapyStack
FLASK_ENV=production
SECRET_KEY=change_me_to_a_secure_random_string
FERNET_KEY=base64url_32bytes_encryption_key

# Auth
AUTH_MODE=oauth        # none | basic | oauth
BASIC_USERNAME=admin   # used if AUTH_MODE=basic
BASIC_PASSWORD_HASH=pbkdf2:sha256:260000$salt$hash  # never store plain

# OAuth (choose one provider or generic OIDC)
OAUTH_PROVIDER=github  # github | gitlab | oidc
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URL=https://yourapp.example.com/oauth/callback
# OIDC extras
OIDC_ISSUER_URL=https://accounts.google.com
OIDC_SCOPES=openid email profile

# Database
DB_VENDOR=postgres     # postgres | mysql
DATABASE_URL=postgresql+psycopg://user:pass@host:5432/capystack
# or: mysql+pymysql://user:pass@host:3306/capystack

# Redis
REDIS_URL=redis://redis:6379/0

# Project (single app supported)
PROJECT_NAME=My App
GIT_PROVIDER=github    # github | gitlab | generic
REPO_URL=https://github.com/owner/repo.git
GIT_AUTH_TOKEN=ghp_your_personal_access_token
DEFAULT_BRANCH=main

# Runner
RUNNER_TYPE=local      # local | docker
WORK_DIR=/var/capystack/runs
RETAIN_DEPLOYMENTS=10  # per project

# i18n
WEGLOT_KEY=Enter Key if translation needed
